@model UserViewModel
@{

}
<div class="container">
    <div class="row justify-content-center">
        <div class="col col-sm-5">
            <h1 class="text-center">Login</h1>
            <form method="post" asp-controller="Auth" asp-action="Login">
                <div class="form-outline mb-4">
                    <input type="email" asp-for="Email" id="email" class="form-control"/>
                    <label class="form-label" asp-for="Email">Email address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-outline mb-4">
                    <input type="password" asp-for="Password" id="password" class="form-control" />
                    <label class="form-label" asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" id="submitLogin" class="btn btn-primary btn-block mb-4">Sign IN </button>
            </form>
        </div>
    </div>

</div>
