@model UserViewModel
@{

}

<div class="container">
    <div class="row justify-content-center">
        <div class="col col-sm-5">
            <h1 class="text-center">Register</h1>
            <form method="post" asp-controller="Auth" asp-action="Register">
                <div class="form-outline mb-4">
                    <input type="email" asp-for="Email" class="form-control" />
                    <label class="form-label" asp-for="Email">Email address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-outline mb-4">
                    <input type="password" asp-for="Password" id="password" class="form-control" />
                    <label class="form-label" asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>


                <div class="form-outline mb-4">
                    <input type="password" asp-for="ConfirmPassword" id="password" class="form-control" />
                    <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>


                <button type="submit" id="submit-btn" class="btn btn-primary btn-block mb-4">Sign up</button>

                <div class="text-center">
                    <p>Not a member? <a asp-controller="Auth" asp-action="Register">Register</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
