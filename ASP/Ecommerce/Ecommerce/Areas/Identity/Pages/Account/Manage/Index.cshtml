@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-10">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
          

            <div class="form-floating p-1 col-6">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating p-1 col-6">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            @*______________________________________________________________*@

            <div class="form-floating p-1 col-6">
               <a id="enable-auth" asp-area="Identity" asp-page="EnableAuthenticator">
                        <span>
                            Enable Authenticator
                        </span>
                    <i class="fa-sharp fa-solid fa-user-secret"></i>
                    </a>
            </div>
          
            <div class="form-floating p-1 col-6">
              <a id="enable-auth" asp-area="Identity" asp-page="ChangePassword">
                        <span>
                            Change Password
                        </span>
                    <i class="fa-solid fa-key-skeleton"></i>
                    </a>
            </div>
             <div class="form-floating p-1 col-6">
              <a id="enable-auth" asp-area="Identity" asp-page="TwoFactorAuthentication">
                        <span>
                            Two Factor Auth
                        </span>
                    <i class="fa-solid fa-database"></i>
                    </a>
            </div>
            <div class="form-floating p-1 col-6">
              <a id="enable-auth" asp-area="Identity" asp-page="Disable2fa">
                        <span>
                            Disable2fa
                        </span>
                    <i class="fa-solid fa-user-unlock"></i>
                    </a>
            </div>
            <div class="form-floating p-1 col-6">
              <a id="enable-auth" asp-area="Identity" asp-page="PersonalData">
                        <span>
                            Personal Data
                        </span>
                    <i class="fa-solid fa-database"></i>
                    </a>
            </div>
            
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
