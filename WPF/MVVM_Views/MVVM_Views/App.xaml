<Application x:Class="MVVM_Views.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MVVM_Views"
             xmlns:View="clr-namespace:MVVM_Views.View"
             xmlns:ViewModel="clr-namespace:MVVM_Views.ViewModel"
             StartupUri="/View/MainView.xaml">

    <Application.Resources>
        <DataTemplate DataType="{x:Type ViewModel:MainViewModel}">
            <View:MainView></View:MainView>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type ViewModel:FirstViewModel}">
            <View:FirstView></View:FirstView>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type ViewModel:SecondViewModel}">
            <View:SecondView></View:SecondView>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type ViewModel:ThirdViewModel}">
            <View:ThirdView></View:ThirdView>
        </DataTemplate>

    </Application.Resources>
</Application>
